@using ProjectDBModel


@model AccountProjectVM
@{
    ViewBag.Title = "Related Projects";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-8">
                <h4 class="">
                    Projects
                </h4>
            </div>
            <div class="col-lg-2 col-lg-push-2 text-right">
                <form class="">
                    @*<button type="button" class="btn btn-success btn pull-right">@Html.ActionLink("Create New", "Create", new { @class="btn btn-success btn pull-right"})</button>*@
                   <a class="btn btn-success btn pull-right" href='@Url.Action("Create", "Projects", Model.Account.Id)'>Add Project</a>
                </form>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="container">
            <!-- Page Heading -->
            <div class="row">

            </div>
            <!-- /.row -->
            @if (Model.RelatedProjects.Count() > 0)
            {

                for (int i = 0; i < Model.RelatedProjects.Count(); i++)
                {
                    string picName = Model.RelatedProjects[i].PLogo;
            <!-- Project One -->
                    <div class="row">
                        <div class="col-md-5">
                            <a href="#">
                                @if (picName != null)
                                {
                                    <img class="img-responsive" src="~/Content/Uploads/@(picName)" alt="@(picName)_alt" width="300">
                                }
                                else
                                {
                                    <img src="http://placehold.it/350x250" alt="" class="img-responsive center-block" />
                                }

                            </a>
                        </div>
                        <div class="col-md-5">
                            <h3>@Html.DisplayFor(model => model.RelatedProjects[i].PName)</h3>
                            <h4>@Html.DisplayFor(model => model.RelatedProjects[i].PSubHeading)</h4>
                            <p>@Html.DisplayFor(model => model.RelatedProjects[i].PInfo)</p>
                            <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
                        </div>
                    </div>

                    <hr>
                }

            }
            else
            {

                <div class="alert alert-warning">
                    <strong>Ohh!</strong> There is no existing project for this account...
                </div>
            }
        </div>
    </div>
</div>
